= form_for @expense do |f|
  - if @expense.errors.any?
    #error_explanation
      %h2= "#{pluralize(@expense.errors.count, "error")} prohibited this expense from being saved:"
      %ul
        - @expense.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :member
    = @member.name
    = f.hidden_field :member_id, value: @member.id.to_s
  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :amount
    = f.text_field :amount
  .field
    = f.label :comment
    = f.text_area :comment
  .actions
    = f.submit 'Save'
