%p#notice= notice
%p
  %b Name:
  = @trip.name
  %b Total Cost:
  = @trip.total_trip_expense

%p
  %b Members:
  %ol
    - @trip.members.each do |member|
      = link_to member.name, member_path(member)
      %b
        = member.total_expenses

= link_to 'Add Member', new_member_path(:trip_id => @trip)

= link_to 'Edit', edit_trip_path(@trip)
\|
= link_to 'Back', trips_path
